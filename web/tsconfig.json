{
  "compilerOptions": {
    "outDir": "bundles/app/",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "core-js"
    ]
  },
  "exclude": [
    "./gulpfile.js",
    "./bower_components",
    "./node_modules"
  ]
}
